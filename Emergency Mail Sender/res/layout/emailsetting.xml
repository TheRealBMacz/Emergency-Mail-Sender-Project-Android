 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     	    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
         android:id="@+id/scrollView1"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:background="@drawable/setkk"
          >

 <AbsoluteLayout
     android:layout_width="fill_parent"
      android:id="@+id/mainLayout"
     android:layout_height="match_parent">

     <Button
         android:id="@+id/save"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="114dp"
         
         android:layout_y="401dp"
         android:text="Save" />

     <CheckBox
         android:id="@+id/mon"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="38dp"
          android:textColor="#000000"
         android:layout_y="258dp"
         android:text="Monday" />

     <CheckBox
         android:id="@+id/all"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="38dp"
          android:textColor="#000000"
         android:layout_y="216dp"
         android:text="All" />

     <CheckBox
         android:id="@+id/fri"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="38dp"
          android:textColor="#000000"
         android:layout_y="352dp"
         android:text="Friday" />

     <CheckBox
         android:id="@+id/wed"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="37dp"
          android:textColor="#000000"
         android:layout_y="306dp"
         android:text="wednesday" />

     <CheckBox
         android:id="@+id/sun"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="185dp"
          android:textColor="#000000"
         android:layout_y="216dp"
         android:text="Sunday" />

     <CheckBox
         android:id="@+id/tue"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="185dp"
          android:textColor="#000000"
         android:layout_y="260dp"
         android:text="Tuesday" />

     <CheckBox
         android:id="@+id/sat"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="185dp"
          android:textColor="#000000"
         android:layout_y="347dp"
         android:text="Saturday" />

     <CheckBox
         android:id="@+id/thu"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="185dp"
          android:textColor="#000000"
         android:layout_y="306dp"
         android:text="Thursday" />

     <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="3dp"
         android:layout_y="103dp"
         android:text="CONFIGURATION:"
        
         android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="#000000" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="8dp"
         android:layout_y="50dp"
         android:text="EMAIL ID:"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="#000000" />

     <Spinner
         android:id="@+id/spinner"
         android:layout_width="119dp"
         android:layout_height="wrap_content"
         android:layout_x="186dp"
         android:layout_y="100dp" />

     <Button
         android:id="@+id/fromtime1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="34dp"
         android:layout_y="158dp"
         android:text="FROM time"
         android:textColor="#000000" />

     <Button
         android:id="@+id/totime1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="178dp"
         android:layout_y="160dp"
         android:text="To Time"
         android:textColor="#000000" />

     <Button
         android:id="@+id/stop"
         android:visibility="invisible"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="188dp"
         android:layout_y="397dp"
         android:text="Stop" />

     <AutoCompleteTextView
         android:id="@+id/autoCompleteTextView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="108dp"
         android:layout_y="48dp"
         android:textColor="#000000"
         android:ems="10"
         android:hint="ems@gmail.com" />

    </AbsoluteLayout>
</ScrollView>